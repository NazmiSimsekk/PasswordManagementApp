<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable
            name="signUpVar"
            type="com.example.passwordmanagementapp.viewModel.SignupViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        tools:context=".view.SignupFragment">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:text="Kayıt Olma"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints="no"
            android:hint="Kullanıcı Adı"
            android:text="@={signUpVar.userName}"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/black"
            android:minHeight="48dp"
            tools:ignore="HardcodedText"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/tryPassword"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Şifreyi Tekrar Giriniz"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>
</layout>