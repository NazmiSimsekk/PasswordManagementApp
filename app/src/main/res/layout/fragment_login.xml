<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginVar"
            type="com.example.passwordmanagementapp.viewModel.LoginViewModel" />
        <variable
            name="clickListener"
            type="com.example.passwordmanagementapp.util.SignupClick" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        tools:context=".view.LoginFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Girişi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints="username"
            android:hint="Kullanıcı Adı"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Şifre"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Giriş Yap"
                android:maxWidth="320dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="25dp"
                tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:onClick="@{clickListener::signUpClick}"
                android:text="Kayıt Ol"
                android:textColor="#0277BD"
                android:textSize="20sp"
                tools:ignore="HardcodedText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Şifremi Unuttum"
                android:textColor="#0277BD"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/loginHashingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hashing"
                tools:ignore="HardcodedText"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/loginGenerateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Generate"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        </LinearLayout>

</layout>